function void drawMugshot(int pln, int x, int y, int team, int dead)
{
    if(!cvars[CV_SHOWMUGSHOT])
        return;

    str face = getMugshotGraphicFromTID(pln+PLN_TID_SHRT);

    if(StrLen(face) == 0) {
        if(lastValidMug[pln][MV_INIT])
            face = lastValidMug[pln][MV_MUG];
        else
            return;
    } else {
        if(!lastValidMug[pln][MV_INIT])
            lastValidMug[pln][MV_INIT] = true;
        lastValidMug[pln][MV_MUG] = face;
    }

    if(mugCache_Scale != cvars[CV_SCALE]) {
        mugCache_Scale = cvars[CV_SCALE];
        mugScale = FixedMul(cvars[CV_SCALE], 4.0);
        mugShot_ExplodeScale = FixedMul(mugScale, 0.25);

        mugShot_ObjX = fixedMul(mugScale, MG_OBJ_X);
        mugShot_ObjY = fixedMul(mugScale, MG_OBJ_Y);

        mugShot_StatusX = fixedMul(mugScale, MG_STATUS_X);
        mugShot_StatusY = fixedMul(mugScale, MG_STATUS_Y);
        mugShot_VCY = fixedMul(mugScale, MG_VC_Y);
        
        mugShot_SkullY = fixedMul(mugScale, MG_SKULL_Y);
        mugShot_ExplodeX = fixedMul(mugShot_ExplodeScale, MG_EXPLODE_X);
        mugShot_ExplodeY = fixedMul(mugShot_ExplodeScale, MG_EXPLODE_Y);
    }

    drawMugshotDead(pln, x, y, team, dead);

    displayIcon(cvars[CV_LAYER], face, x, y, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_CENTER, ALIGN_CENTER);
}

function void drawStatus(int pln, int x, int y)
{
    if(!cvars[CV_SHOWMENUSTATUS])
        return;

    int status = GetPlayerStatus(pln);

    if(status == 0)
        return;

    if(status & PLAYERSTATUS_CHATTING)
        displayIcon(cvars[CV_LAYER], "UIXSTCHT", x+mugShot_StatusX, y+mugShot_StatusY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);
    if(status & PLAYERSTATUS_TALKING)
        displayIcon(cvars[CV_LAYER], "UIXSTVC1", x+mugShot_StatusX, y+mugShot_VCY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_BOTTOM);
    if(status & PLAYERSTATUS_INCONSOLE)
        displayIcon(cvars[CV_LAYER], "UIXSTCO1", x+mugShot_StatusX, y+mugShot_StatusY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);
    if(status & PLAYERSTATUS_INMENU)
        displayIcon(cvars[CV_LAYER], "UIXSTMN1", x+mugShot_StatusX, y+mugShot_StatusY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);
    if(status & PLAYERSTATUS_LAGGING)
        displayIcon(cvars[CV_LAYER], "UIXSTLAG", x+mugShot_StatusX, y+mugShot_StatusY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);
}

function void drawMugshotDead(int pln, int x, int y, int team, int dead)
{
    if(cvars[CV_SHOWDEATHANIM] && lastValidMug[pln][MV_DIEDONCE]) {
        int explodeFrame = Timer() - lastValidMug[pln][MV_DEADTIME];
        if(explodeFrame < FRAGMSG_EXPLODEFRAMES) {
            displayIcon(cvars[CV_LAYER], explodeFrames[explodeFrame], x+mugShot_ExplodeX, y+mugShot_ExplodeY, mugShot_ExplodeScale, mugShot_ExplodeScale, cvars[CV_ALPHA], ALIGN_CENTER, ALIGN_CENTER);
        }
    }

    if(dead == STATUS_ALIVE)
        return;

    displayIcon(cvars[CV_LAYER], skullIcons[0][4], x, y+mugShot_SkullY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_CENTER, ALIGN_CENTER);
    displayIcon(cvars[CV_LAYER], skullIcons[1][200], x, y+mugShot_SkullY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_CENTER, ALIGN_CENTER);
    displayIcon(cvars[CV_LAYER], "UIXMGSCR", x, y, mugScale, mugScale, FixedMul(cvars[CV_ALPHA], 0.5), ALIGN_CENTER, ALIGN_CENTER);
}

script "UIXTeam_Mugshot_Death" DEATH CLIENTSIDE
{
    int pln = PlayerNumber();
    str face = getMugshotGraphicFromTID(pln+PLN_TID_SHRT);

    if(StrLen(face) == 0) {
        if(lastValidMug[pln][MV_INIT]) {
            face = lastValidMug[pln][MV_MUG];
        }
    } else {
        if(!lastValidMug[pln][MV_INIT]) {
            lastValidMug[pln][MV_INIT] = true;
        }
        lastValidMug[pln][MV_MUG] = face;
    }

    lastValidMug[pln][MV_DEADTIME] = timer();
    lastValidMug[pln][MV_DIEDONCE] = true;
}

function void drawObjective(int pln, int x, int y, int team)
{
    if(objective == OBJ_IDC)
        return;

    if(!cvars[CV_SHOWOBJECTIVES])
        return;
    
    if(objectiveDrawn)
        return;

    for(int i = 0; i < maxTeams; i++) {
        if(i == team)
            continue;
        if(CheckActorInventory(pln+PLN_TID_SHRT, objectiveItems[objective][i]) == 0)
            continue;

        objectiveDrawn = true;
        if(lastPickup == -1)
            lastPickup = Timer();

        if(((Timer()-lastPickup) / 35) % 2 == 1) {
            displayIcon(cvars[CV_LAYER], getObjectiveIcon(objective, 2, 0), x+mugShot_ObjX, y+mugShot_ObjY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);
        }

        str cyan = getObjectiveIcon(objective, 0, CallACS2("core_getteampalette", i, 0));
        str blue = getObjectiveIcon(objective, 1, CallACS2("core_getteampalette", i, 1));

        displayIcon(cvars[CV_LAYER], cyan, x+mugShot_ObjX, y+mugShot_ObjY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);

        if(cyan != blue) {
            displayIcon(cvars[CV_LAYER], blue, x+mugShot_ObjX, y+mugShot_ObjY, mugScale, mugScale, cvars[CV_ALPHA], ALIGN_LEFT, ALIGN_TOP);
        }
    }
}

// Draw Name ========================================================================================================================================
#define NAME_X_00 17
#define NAME_Y_00 -14

#define NAME_X_01 -NAME_X_00-1
#define NAME_Y_01 NAME_Y_00

#define NAME_X_10 -15
#define NAME_Y_10 17

#define NAME_X_11 NAME_X_10
#define NAME_Y_11 -18

int nc[4]; // name cache
#define NC_SCALE    0
#define NC_MIRROR   1
#define NC_DIR      2
#define NC_NAMESIZE 3

int nv[6]; // name vars
#define N_X      0
#define N_Y      1
#define N_SCALE  2
#define N_HALIGN 3
#define N_VALIGN 4
#define N_LENGTH 5

function void drawName(int pln, int x, int y)
{
    if(!cvars[CV_SHOWNAME])
        return;

    if(
        nc[NC_SCALE] != cvars[CV_SCALE] ||
        nc[NC_MIRROR] != cvars[CV_MIRROR] ||
        nc[NC_DIR] != cvars[CV_DIR] ||
        nc[NC_NAMESIZE] != cvars[CV_NAMESIZE]
    )
    {
        nc[NC_SCALE] = cvars[CV_SCALE];
        nc[NC_MIRROR] = cvars[CV_MIRROR];
        nc[NC_DIR] = cvars[CV_DIR];
        nc[NC_NAMESIZE] = cvars[CV_NAMESIZE];

        nv[N_X] = FixedMul(cvars[CV_SCALE], (!cvars[CV_DIR] ? (!cvars[CV_MIRROR] ? NAME_X_00 : NAME_X_01) : (!cvars[CV_MIRROR] ? NAME_X_10 : NAME_X_11)));
        nv[N_Y] = FixedMul(cvars[CV_SCALE], (!cvars[CV_DIR] ? (!cvars[CV_MIRROR] ? NAME_Y_00 : NAME_Y_01) : (!cvars[CV_MIRROR] ? NAME_Y_10 : NAME_Y_11)));
        nv[N_SCALE] = FixedMul(cvars[CV_SCALE], TEXT_SCALE);
        nv[N_LENGTH] = cvars[CV_NAMESIZE];
        nv[N_HALIGN] = cvars[CV_DIR] == vertical ? ALIGN_CENTER : (cvars[CV_MIRROR] ? ALIGN_RIGHT : ALIGN_LEFT);
        nv[N_VALIGN] = cvars[CV_DIR] == horizontal ? ALIGN_CENTER : (!cvars[CV_MIRROR] ? ALIGN_TOP : ALIGN_BOTTOM);
    }

    str name = getPlayerName(pln, cvars[CV_DIR], cvars[CV_FONTIDX]);
    int plrNameLength = getCacheNameWidth(pln, cvars[CV_DIR], cvars[CV_FONTIDX]);
    int nameLengthScale = 1.0;

    if(plrNameLength > nv[N_LENGTH]) {
        nameLengthScale = FixedDiv(nv[N_LENGTH], plrNameLength);
    }

    int nameScaleX = cvars[CV_DIR] ? nv[N_SCALE] : FixedMul(nv[N_SCALE], nameLengthScale);
    int nameScaleY = !cvars[CV_DIR] ? nv[N_SCALE] : FixedMul(nv[N_SCALE], nameLengthScale);
    
    SetFont(uiFonts[cvars[CV_FONTIDX]]);
    displayMessage(cvars[CV_LAYER], name, x + nv[N_X], y + nv[N_Y], nameScaleX, nameScaleY, cvars[CV_ALPHA], nv[N_HALIGN], nv[N_VALIGN]);
}

// Draw Location ========================================================================================================================================
#define LOC_X_00 NAME_X_00
#define LOC_Y_00 NAME_Y_00 + 7

#define LOC_X_01 NAME_X_01
#define LOC_Y_01 LOC_Y_00

#define LOC_X_10 NAME_X_10 + 7
#define LOC_Y_10 NAME_Y_10

#define LOC_X_11 LOC_X_10
#define LOC_Y_11 NAME_Y_11-1

int lc[4]; // location cvar cache
#define LC_SCALE    0
#define LC_MIRROR   1
#define LC_DIR      2
#define LC_NAMESIZE 3

int lv[6]; // location variables
#define L_X      0
#define L_Y      1
#define L_SCALE  2
#define L_HALIGN 3
#define L_VALIGN 4
#define L_LENGTH 5

function void drawLocation(int pln, int x, int y, int dead)
{
    if(!cvars[CV_SHOWLOCATION])
        return;

    if(
        lv[LC_SCALE] != cvars[CV_SCALE] ||
        lv[LC_MIRROR] != cvars[CV_MIRROR] ||
        lv[LC_DIR] != cvars[CV_DIR] ||
        lv[LC_NAMESIZE] != cvars[CV_NAMESIZE]
    )
    {
        lv[LC_SCALE] = cvars[CV_SCALE];
        lv[LC_MIRROR] = cvars[CV_MIRROR];
        lv[LC_DIR] = cvars[CV_DIR];
        lv[LC_NAMESIZE] = cvars[CV_NAMESIZE];

        lv[L_X] = FixedMul(cvars[CV_SCALE], (!cvars[CV_DIR] ? (!cvars[CV_MIRROR] ? LOC_X_00 : LOC_X_01) : (!cvars[CV_MIRROR] ? LOC_X_10 : LOC_X_11)));
        lv[L_Y] = FixedMul(cvars[CV_SCALE], (!cvars[CV_DIR] ? (!cvars[CV_MIRROR] ? LOC_Y_00 : LOC_Y_01) : (!cvars[CV_MIRROR] ? LOC_Y_10 : LOC_Y_11)));
        lv[L_SCALE] = FixedMul(cvars[CV_SCALE], TEXT_SCALE);
        lv[L_LENGTH] = cvars[CV_NAMESIZE];
        lv[L_HALIGN] = cvars[CV_DIR] == vertical ? ALIGN_CENTER : (cvars[CV_MIRROR] ? ALIGN_RIGHT : ALIGN_LEFT);
        lv[L_VALIGN] = cvars[CV_DIR] == horizontal ? ALIGN_CENTER : (!cvars[CV_MIRROR] ? ALIGN_TOP : ALIGN_BOTTOM);
    }

    str loc = findLocation(pln, cvars[CV_DIR], cvars[CV_FONTIDX], dead);

    if(loc == -1)
        return;
    
    int plrLocLength = getLocWidthPlr(pln, cvars[CV_DIR], cvars[CV_FONTIDX]);

    int locLengthScale = 1.0;

    if(plrLocLength > lv[L_LENGTH]) {
        locLengthScale = FixedDiv(lv[L_LENGTH], plrLocLength);
    }

    int locScaleX = cvars[CV_DIR] ? lv[L_SCALE] : FixedMul(lv[L_SCALE], locLengthScale);
    int locScaleY = !cvars[CV_DIR] ? lv[L_SCALE] : FixedMul(lv[L_SCALE], locLengthScale);
    
    SetFont(uiFonts[cvars[CV_FONTIDX]]);
