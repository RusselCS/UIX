function int getPlayerAlive(int pln)
{
    if(PlayerIsSpectator(pln) == 2)
        return STATUS_GHOST;
    
    if(!PlayerInGame(pln))
        return STATUS_GONE;
    
    if(GetActorProperty(pln+PLN_TID_SHRT, AProp_Health) <= 0)
        return STATUS_DEAD;

    return STATUS_ALIVE;   
}

script "UITweaks_TeamInfo" (int cam, int cpn, int cv)
{
    if(!GetCvar("UIX_SV_TEAMINFO"))
        terminate;

    int baseAlpha = GetUserCvar(cpn, "UIX_CL_TEAMINFOALPHA");
    if(baseAlpha == 0.0)
        terminate;

    if(CheckActorInventory(cam, "UIX_NoTeamBar") > 0)
        terminate;

    SetActivator(cam);

    int pln = PlayerNumber();
    if(pln == -1)
        terminate;

    SetActivator(-1);

    int team = getPlayerTeam(pln);
    // Log(i:team, s:" cam: ", i:cam);

    if(team == 255) { // Spectator

    } else {
        dbShowSelf = GetUserCvar(cpn, "UIX_DEBUG_SHOWSELF");

        cvars[CV_OFFSX] = GetUserCvar(cpn, "UIX_CL_TEAMINFOOFFSX");
        cvars[CV_OFFSY] = GetUserCvar(cpn, "UIX_CL_TEAMINFOOFFSY");
        cvars[CV_SCALE] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSCALE");
        cvars[CV_ALPHA] = baseAlpha;
        cvars[CV_NAMESIZE] = GetUserCvar(cpn, "UIX_CL_TEAMINFONAMESIZE");
        cvars[CV_MIRROR] = GetUserCvar(cpn, "UIX_CL_TEAMINFOMIRROR");
        cvars[CV_DIR] = GetUserCvar(cpn, "UIX_CL_TEAMINFODIR");
        cvars[CV_FONTDIR] = GetUserCvar(cpn, "UIX_CL_TEAMINFOFONTDIR");
        cvars[CV_STACK] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSTACK");
        cvars[CV_SHOWNAME] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSHOWNAME");
        cvars[CV_SHOWHEALTH] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSHOWHEALTH");
        cvars[CV_SHOWLOCATION] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSHOWLOCATION");
        cvars[CV_SHOWLIVES] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSHOWLIVES");
        cvars[CV_SHOWMUGSHOT] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSHOWMUGSHOT");
        cvars[CV_SHOWWEAPON] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSHOWWEAPON");
        cvars[CV_SEPARATION] = GetUserCvar(cpn, "UIX_CL_TEAMINFOSEPARATION");
        cvars[CV_WRAPAMOUNT] = GetUserCvar(cpn, "UIX_CL_TEAMINFOWRAPAMOUNT");
        cvars[CV_WRAPDIR] = GetUserCvar(cpn, "UIX_CL_TEAMINFOWRAPDIR");
        cvars[CV_WRAPSEPARATION] = GetUserCvar(cpn, "UIX_CL_TEAMINFOWRAPSEPARATION");
        cvars[CV_SHOWDEAD] = GetUserCvar(cpn, "UIX_CV_TEAMINFOSHOWDEAD");
        cvars[CV_SHOWDEATHANIM] = GetUserCvar(cpn, "UIX_CV_TEAMINFOSHOWDEATHANIM");
        cvars[CV_SHOWMENUSTATUS] = GetUserCvar(cpn, "UIX_CV_TEAMINFOSHOWMENUSTATUS");
        cvars[CV_SHOWOBJECTIVES] = GetUserCvar(cpn, "UIX_CV_TEAMINFOSHOWOBJECTIVES");
        cvars[CV_LAYER] = hudLayers[GetUserCvar(cpn, "UIX_CL_TEAMINFOLAYER")];

        cvars[CV_FONTIDX] = cvars[CV_FONTDIR] ^ cvars[CV_DIR];
        cvars[CV_REVERSETEXT] = cvars[CV_DIR] && !cvars[CV_FONTDIR];

        if(
            tiCache_Scale != cvars[CV_SCALE] ||
            tiCache_Stack != cvars[CV_STACK] ||
            tiCache_WrapDir != cvars[CV_WRAPDIR] ||
            tiCache_Separation != cvars[CV_SEPARATION] ||
            tiCache_WrapSeparation != cvars[CV_WRAPSEPARATION]
        ) {
            tiCache_Scale = cvars[CV_SCALE];
            tiCache_Stack = cvars[CV_STACK];
            tiCache_WrapDir = cvars[CV_WRAPDIR];
            tiCache_Separation = cvars[CV_SEPARATION];
            tiCache_WrapSeparation = cvars[CV_WRAPSEPARATION];

            tiStackOffs = FixedMul(STACK_OFFS+tiCache_Separation, cvars[CV_SCALE]);
            tiWrapOffs = FixedMul(WRAP_OFFS+tiCache_WrapSeparation, cvars[CV_SCALE]);

            if(cvars[CV_STACK])
                tiStackOffs *= -1;

            if(cvars[CV_WRAPDIR])
                tiWrapOffs *= -1;
        }

        int drawnPlayers = 0;

        for(int i = 0; i < MAX_PLAYERS_SHRT; i++) {
            // Log(i:i, s:" == ", i:pln);
            if(!dbShowSelf)
                if(i == pln)
                    continue;

            // Log(i:i, s:"in game? ", i:PlayerInGame(i));
            int dead = getPlayerAlive(i);
            if(dead == STATUS_GONE)
                continue;
            
            if(!cvars[CV_SHOWDEAD])
                if(dead == STATUS_GHOST)
                    continue;

            // Log(i:i, s:" team: ", i:GetPlayerInfo(i, PLAYERINFO_TEAM), s:" == ", i:team);
            if(getPlayerTeam(i) != team)
                continue;

            int baseX, baseY;

            if(cvars[CV_WRAPAMOUNT] > 0) {
                int stackCount = drawnPlayers % cvars[CV_WRAPAMOUNT];
                int wrapCount = drawnPlayers / cvars[CV_WRAPAMOUNT];

                baseX = cvars[CV_OFFSX] + (cvars[CV_DIR] ? stackCount * tiStackOffs : 0);
                baseY = cvars[CV_OFFSY] + (!cvars[CV_DIR] ? stackCount * tiStackOffs : 0);

                baseX += (!cvars[CV_DIR] ? wrapCount * tiWrapOffs : 0);
                baseY += (cvars[CV_DIR] ? wrapCount * tiWrapOffs : 0);
            } else {
                baseX = cvars[CV_OFFSX] + (cvars[CV_DIR] ? drawnPlayers * tiStackOffs : 0);
                baseY = cvars[CV_OFFSY] + (!cvars[CV_DIR] ? drawnPlayers * tiStackOffs : 0);
            }

            drawStatus(i, baseX, baseY);
            if(dead == STATUS_ALIVE)
                drawObjective(i, baseX, baseY, team);
            drawMugshot(i, baseX, baseY, team, dead);
            drawName(i, baseX, baseY);
            drawLocation(i, baseX, baseY, dead);
            drawHealth(i, baseX, baseY, dead);
            drawWeapon(i, baseX, baseY, dead);
            drawLives(i, baseX, baseY, dead);

            drawnPlayers++;
        }
        if(!objectiveDrawn) {
            lastPickup = -1;
        } else {
            objectiveDrawn = false;
        }
    }
}

