#define OBJ_SKULLTAG 1
#define OBJ_CTF 2
#define OBJ_TEAMPOSS 3
#define OBJ_MODES 4
str objectiveModes[OBJ_MODES] = { "OneFlagCTF", "Skulltag", "CTF", "TeamPossession" };
str objectiveItems[OBJ_MODES][4] = {
    {"MegaWhiteFlag", "MegaWhiteFlag", "MegaWhiteFlag", "MegaWhiteFlag"},
    {"MegaBlueHat", "MegaRedHat", "MegaGreenHat", "MegaYellowHat"},
    {"MegaBlueFlag", "MegaRedFlag", "MegaGreenFlag", "MegaYellowFlag"},
    {"PowerPossessionArtifact", "PowerPossessionArtifact", "PowerPossessionArtifact", "PowerPossessionArtifact"},
};
int objective = OBJ_IDC;
int maxTeams = -1;
// /!\ MANIPULATED IN DRAWMUGSHOT /!\
int objectiveDrawn = false;
int lastPickup = -1;
// ----------------------------------

#define SURVIVAL 3
str survivalModes[SURVIVAL] = { "teamlms", "lastmanstanding", "survival" };
int maxLives = -1;

#define COOP_MODES 3
str coopModes[COOP_MODES] = { "cooperative", "survival", "invasion" };
int isCoopMode = false;

function int getPlayerTeam(int pln) {
	
	if(isCoopMode)
        return 4;
	
	return GetPlayerInfo(pln, PLAYERINFO_TEAM);
}

script "UITweaks_TeamInfo_ModeTest" OPEN CLIENTSIDE
{
    str mode = GetCurrentGamemode();
    int i;

    for(i = 0; i < COOP_MODES; i++) {
        if(StrMatches(coopModes[i], mode)) {
            isCoopMode = true;
            break;
        }
    }

    for(i = 0; i < OBJ_MODES; i++) {
        if(StrMatches(objectiveModes[i], mode)) {
            objective = i;
            maxTeams = GetCvar("sv_maxteams");
            terminate;
        }
    }

    for(i = 0; i < SURVIVAL; i++) {
        if(StrMatches(survivalModes[i], mode)) {
            maxLives = GetCvar("sv_maxlives");
            break;
        }
    }
}

