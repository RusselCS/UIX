// Making my own ColorStore here because I plan on having v6a support for
// specifically gondola, so any actors need to be original

actor UIXColorStore
{
    renderstyle "none"
    +NOINTERACTION
    +CLIENTSIDEONLY
    args 192, 198
    States
    {
    Spawn:
        TNT1 AA 0
        stop
    }
}

